func main () {
    check_typed();
}

func check_if_typed_apple(reading: string) {
    variable := "apple";
    if variable == reading {
        println("You typed 'apple'");
    } else {
        println("You didn't type 'apple'.");
        check_typed();
    }
}

func check_typed() {
    println("----");
    printf("Type something: ");
    reading := readln();
    println("You typed `$reading`");
    check_if_typed_apple(reading);
}